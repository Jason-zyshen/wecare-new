        <section class="sm:col-7 md:col-8">
          <form
            class="contact-form row gy-2 justify-center"
            method="POST"
            action={contact_form_action}
          >
            <div class="lg:col-6">
              <FormInput name="Name" required />
            </div>
            <div class="lg:col-6">
              <FormInput name="Email" type="email" required />
            </div>
            <div class="col-12">
              <FormInput name="Password" type="password" required />
            </div>
            <div class="col-12">
              <FormTextArea name="Message" rows="4" />
            </div>
            <div class="col-12">
              <button class="btn btn-primary mt-2">Submit Now</button>
            </div>
          </form>
        </section>
      </article>
    </div>
  </section>
</Base>
